sleep 7
ip link set dev enp0s3 down
dhclient -r enp0s3
touch /etc/netplan/99_config.yaml
# write the following
echo -e 'network:\n    version: 2\n    renderer: networkd\n    ethernets:\n        enp0s8:\n            addresses:\n                - 192.168.19.2/29\n\n            routes:\n                - to: default\n                  via: 192.168.19.1' > /etc/netplan/99_config.yaml
sleep 2
netplan apply
ip address
ip route
sleep 3
cp /etc/systemd/resolved.conf /etc/systemd/resolved.conf.backup
sed -i '/#FallbackDNS=/a FallbackDNS=1.1.1.1 8.8.8.8 9.9.9.9' /etc/systemd/resolved.conf
cp /etc/hosts /etc/hosts.backup
sed -i '/127.0.1.1 gw/a 10.102.108.5 matrix.senecacollege.ca matrix' /etc/systemd/resolved.conf
sleep 2
ip route
ip --brief a
